<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="row center">
      <div class="col s12 m12 l12">
        <div class="card-panel">
          <h3 class="center-align"><%= @student.new_record? ? "SIGN UP" : "Edit your profile"%></h3>
          <div class= "row">
            <%= form_for(@student, html: {class: 'col s12'}) do |f| %>
              <div class ="row">
                <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your fullname", autofocus: true %>
                <%= f.label :name %>
                </div>
              </div>
              <div class ="row">
                <div class="input-field col s12">
                  <%= f.label :email, placeholder: "Enter your Email Address" %>
                  <%= f.email_field :email %>
                </div>
              </div>
              <div class ="row">
                <div class="input-field col s12">
                  <%= f.submit(@student.new_record? ? "SIGN UP" : "Submit Updates", class: "btn orange waves-effect waves-light right") %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



